    <files>
        <filename plugin="likely">likely.php</filename>
        <filename>likely.xml</filename>
        <folder>language</folder>
        <folder>tmpl</folder>
    </files>
    <media folder="media" destination="plg_content_likely">
        <folder>css</folder>
        <folder>js</folder>
    </media>
